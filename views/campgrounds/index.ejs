<% layout ('layouts/boilerplate') %> 
    <h1>All Campgrounds!!!</h1>
    <a class="btn btn-dark my-3" href="/campgrounds/new">Make new Camp</a>
    
    <% for (let c of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%= c.image %>">
                </div>
                <div class="col-md-8 my-3">
                    <div class="class-body">
                        <h5 class="card-title"><%= c.title %> </h5>
                        <p class="card-text"><%= c.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= c.location %> </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= c._id %>">View <%= c.title %> </a>
                    </div>
                
                </div>
            </div>
        </div>
        
    <% } %> 
    

    
