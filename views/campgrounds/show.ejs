<% layout ('layouts/boilerplate') %> 
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card my-3">
                <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title"><%= campground.title %></h5>
                  <p class="card-text"><%= campground.description %></p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item text-muted">C<%= campground.location %></li>
                  <li class="list-group-item"><%= campground.price %></li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                    <form class="d-inline" method="POST" action="/campgrounds/<%= campground._id %>?_method=DELETE">
                        <button class="btn btn-warning">Delete</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
              </div>
              <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" novalidate class="validated-form">
                  <h2>Leave a Review!</h2>
                  <div class="mb-3">
                      <label class="form-label" for="rating">Rating</label>
                      <input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5">

                  </div>
                  <div class="mb-3">
                      <label class="form-label" for="body">Review</label>
                      <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                      <div class="valid-feedback">
                          Looks Good!
                      </div>
                  </div>
                  <button class="btn btn-success mb-3">Submit Review</button>

              </form>

        </div>
    </div>

